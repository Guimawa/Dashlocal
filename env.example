# Jarvis Ultra Instinct - Configuration
# Copiez ce fichier vers .env et remplissez vos clés API

# Clé API Groq (obligatoire)
GROQ_API_KEY=your_groq_api_key_here

# Modèle Groq à utiliser (optionnel)
GROQ_MODEL=llama3-70b-8192

# Configuration des limites
MAX_FILE_SIZE=10000
CACHE_TTL=300000

# Configuration du cache
GROQ_CACHE_ENABLED=true
GROQ_CACHE_TTL=300000

# Configuration des logs
LOG_LEVEL=info
LOG_FILE=./jarvis.log

# Configuration de la mémoire
MEMORY_FILE=./jarvis-memory.json
MEMORY_CLEANUP_DAYS=30

# Configuration des tests
TEST_TIMEOUT=30000
COVERAGE_THRESHOLD=80

# Configuration du formatage
PRETTIER_CONFIG=.prettierrc
ESLINT_CONFIG=.eslintrc.js

# Configuration Storybook
STORYBOOK_PORT=6006
STORYBOOK_HOST=localhost
